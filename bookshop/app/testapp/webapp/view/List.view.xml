<mvc:View
    controllerName="com.bookshop.testapp.controller.List"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <f:DynamicPage id="dynamicPageId"
				   toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Books ({books>/results/length})" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
        <!-- ({products>/ProductCollectionStats/Counts/Total}) -->
        <!-- ({books}) -->

		<f:content>
			<Table
				id="booksTable"
				mode="SingleSelectMaster"
				itemPress="onListItemPress"
				inset="false"
				items="{
					path: 'books>/results',
					sorter: {
						path: 'title'
					}
				}"
				class="sapFDynamicPageAlignContent"
				width="auto">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<SearchField search="onSearch" width="17.5rem"/>
						<OverflowToolbarButton icon="sap-icon://add" type="Transparent" press="onAdd"/>
						<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="8em">
						<Text text="No" />
					</Column>
					<Column width="12em">
						<Text text="Book Title" />
					</Column>
					<Column	hAlign="End">
						<Text text="Price" />
					</Column>
					<Column width="20em">
						<Text text="Stock" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectNumber 
								number="{
									parts: [
										{
											path: 'startIndex'
										}
									],
									type: 'sap.ui.model.type.Integer',
									formatOptions: {
										showMeasure: false
									}
								}"
							/>
							<ObjectIdentifier title="{books>title}" text="{path: 'books>title'}" />
							<ObjectNumber
									number="{
										parts:[{path:'books>price'},{path:'books>currency_code'}],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {showMeasure: false}
									}"
									unit="{books>currency_code}"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
		

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
    <!-- <Page id="page" title="{i18n>title}" clicked="">
        <content />
    </Page> -->
</mvc:View>
