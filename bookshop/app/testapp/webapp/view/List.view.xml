<mvc:View
    controllerName="com.bookshop.testapp.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <f:DynamicPage id="dynamicPageId"
				   toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Books ({books>/results/length})" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Table
				id="booksTable"
				mode="SingleSelectMaster"
				itemPress="onListItemPress"
				inset="false"
				items="{
					path: 'books>/results',
					sorter: {
						path: 'ID'
					}
				}"
				class="sapFDynamicPageAlignContent"
				width="auto">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<SearchField search="onSearch" width="17.5rem"/>
						<OverflowToolbarButton icon="sap-icon://add" type="Transparent" press="onAdd"/>
						<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="5em">
						<ObjectIdentifier title="ID" />
					</Column>
					<Column width="15em">
						<ObjectIdentifier title="Book Title" text="Genre"/>
					</Column>
					<Column width="20em">
						<ObjectIdentifier title="Description" />
					</Column>
					<Column	width="10em" hAlign="End">
						<ObjectIdentifier title="Price" />
					</Column>
					<Column width="10em" hAlign="End">
						<ObjectIdentifier title="Quantity" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectNumber 
								number="{
									parts: [
										{
											path: 'books>ID'
										}
									],
									type: 'sap.ui.model.type.Integer',
									formatOptions: {
										showMeasure: false
									}
								}"
							/>
							<ObjectIdentifier title="{books>title}" text="{path: 'books>genre/name'}"/>
							<Text text="{books>descr}" maxLines="1" />
							<ObjectNumber
								number="{
									parts:[{path:'books>price'},{path:'books>currency_code'}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {showMeasure: false}
								}"
								unit="{books>currency_code}"
							/>
							<ObjectNumber 
								number="{ 
									parts: [
										{
											path: 'books>stock'
										}
									],
									type: 'sap.ui.model.type.Integer',
									formatOptions: {
										showMeasure: false
									}
								}"
								unit="EA"
							>
							</ObjectNumber>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
		
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>
