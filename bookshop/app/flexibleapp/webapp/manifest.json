{
    "_version": "1.59.0",
    "sap.app": {
        "id": "com.bookshop.flexibleapp",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "resources": "resources.json",
        "sourceTemplate": {
            "id": "@sap/generator-fiori:basic",
            "version": "1.11.5",
            "toolsId": "ccb55ca0-0892-46b5-be1a-520ad23cbba6"
        },
        "dataSources": {
            "mainService": {
                "uri": "/odata/v2/admin/",
                "type": "OData",
                "settings": {
                    "annotations": [],
                    "localUri": "localService/metadata.xml",
                    "odataVersion": "2.0"
                }
            }
        }
    },
    "sap.ui": {
        "technology": "UI5",
        "icons": {
            "icon": "",
            "favIcon": "",
            "phone": "",
            "phone@2": "",
            "tablet": "",
            "tablet@2": ""
        },
        "deviceTypes": {
            "desktop": true,
            "tablet": true,
            "phone": true
        }
    },
    "sap.ui5": {
        "flexEnabled": false,
        "dependencies": {
            "minUI5Version": "1.120.3",
            "libs": {
                "sap.m": {},
                "sap.ui.core": {},
                "sap.f": {},
                "sap.suite.ui.generic.template": {},
                "sap.ui.comp": {},
                "sap.ui.generic.app": {},
                "sap.ui.table": {},
                "sap.uxap": {},
                "sap.ushell": {}
            }
        },
        "config": {
          "fullWidth": true
        },
        "contentDensities": {
            "compact": true,
            "cozy": true
        },
        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleName": "com.bookshop.flexibleapp.i18n.i18n"
                }
            },
            "": {
                "dataSource": "mainService",
                "preload": true,
                "settings": {
                    "synchronizationMode": "None",
                    "operationMode": "Server",
                    "autoExpandSelect": true,
                    "earlyRequests": true
                }
            }
        },
        "resources": {
            "css": [
                {
                    "uri": "css/style.css"
                }
            ]
        },
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewType": "XML",
                "async": true,
                "viewPath": "com.bookshop.flexibleapp.view",
                "controlAggregation": "pages",
                "controlId": "flexibleColumnLayout",
                "clearControlAggregation": false,
                "path": "com.bookshop.flexibleapp.view"
            },
            "routes": [
                {
                    "pattern": ":?layout:",
                    "name": "TargetList",
                    "target": [
						"TargetList",
						"Detail"
					]
                },
				{
					"pattern": "detail/{product}/{layout}",
					"name": "Detail",
					"target": [
						"TargetList",
						"Detail"
					]
				}
            ],
            "targets": {
                "TargetList": {
                    "viewType": "XML",
                    "transition": "slide",
                    "clearControlAggregation": false,
                    "controlAggregation": "beginColumnPages",
                    "viewId": "List",
                    "viewName": "List"
                },
				"Detail": {
					"controlAggregation": "midColumnPages",
                    "name": "Detail"
				}
            }
        },
        "rootView": {
            "viewName": "com.bookshop.flexibleapp.view.App",
            "type": "XML",
            "async": true,
            "id": "fcl"
        }
    }
}